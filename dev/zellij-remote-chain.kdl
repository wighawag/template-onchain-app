layout {
	pane split_direction="vertical" {
		
	}
	pane split_direction="vertical" {
		pane name="web" command="pnpm"  {
			args "web:dev"
		}
		pane name="svelte-check" command="pnpm"  {
			args "--filter" "./web" "check:watch"
		}
	}

	pane split_direction="vertical" {
		pane name="local node" command="pnpm"  {
			args "--filter" "./contracts" "local_node"
		}
		pane name="watch and compile" command="pnpm"  {
			args "--filter" "./contracts" "compile:watch"
		}
		pane name="watch and deploy" command="pnpm"  {
			args "--filter" "./contracts" "deploy:watch" "localhost" "--ts" "../../web/src/lib/deployments.ts"
		}
		pane name="watch and build typescript" command="pnpm"  {
			args "--filter" "./contracts" "typescript:watch"
		}
	}

	// TODO services
}
