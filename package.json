{
  "name": "template-onchain-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "devDependencies": {
    "cross-var": "^1.1.0",
    "ldenv": "^0.3.16",
    "zellij-launcher": "^0.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "cleandep": "rm -rf node_modules && pnpm -r exec rm -rf node_modules",
    "---------------------- FORMAT ----------------------": "",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "---------------------- contracts ----------------------": "compile and deploy smart contracts",
    "contracts:local_node": "ldenv pnpm run --filter ./contracts local_node",
    "contracts:deploy": "ldenv pnpm run --filter ./contracts deploy @@MODE @@",
    "contracts:deploy:watch": "ldenv pnpm run --filter ./contracts deploy:watch @@MODE @@",
    "contracts:fork:deploy": "ldenv pnpm run --filter ./contracts fork:deploy @@MODE @@",
    "contracts:test": "ldenv pnpm run --filter ./contracts test",
    "contracts:lint": "pnpm --filter ./contracts lint",
    "contracts:execute": "ldenv pnpm run --filter ./contracts execute @@MODE @@",
    "contracts:fork:execute": "ldenv pnpm run --filter ./contracts fork:execute @@MODE @@",
    "contracts:verify": "ldenv pnpm run --filter ./contracts verify @@MODE @@",
    "contracts:compile": "ldenv pnpm --filter ./contracts compile",
    "contracts:compile:watch": "ldenv pnpm --filter ./contracts compile:watch",
    "contracts:build:watch": "ldenv pnpm --filter ./contracts typescript:watch",
    "contracts:build": "ldenv pnpm --filter ./contracts compile ~~ pnpm --filter ./contracts typescript ~~ pnpm --filter ./contracts export @@MODE --ts ../web/src/lib/deployments.ts ~~ @@",
    "contracts:export": "pnpm --filter ./contracts export @@MODE @@",
    "---------------------- WEB ----------------------": "",
    "web:dev": "ldenv pnpm --filter ./web dev",
    "web:build": "ldenv pnpm --filter ./web build",
    "web:serve": "ldenv pnpm --filter ./web serve",
    "web:check": "ldenv pnpm --filter ./web check",
    "web:check:watch": "ldenv pnpm --filter ./web check:watch",
    "---------------------- DEPLOY ----------------------": "",
    "test": "pnpm contracts:test",
    "build": "ldenv --git -d localhost pnpm contracts:build @@MODE ~~ pnpm web:build ~~ @@",
    "serve": "pnpm run --filter ./web serve",
    "---------------------- WEB USING EXISTING DEPLOYMENT ----------------------": "",
    "zellij-attach": "zellij-launcher a $npm_package_name-attach-$MODE || zellij -n dev/zellij-attach.kdl -s $npm_package_name-attach-$MODE",
    "attach": "ldenv -d localhost pnpm contracts:export @@MODE --ts ../web/src/lib/deployments.ts ~~ pnpm run zellij-attach ~~ @@",
    "---------------------- FULL AGAINST AN EXISTING NETWORK WITH LOCAL SERVICES ----------------------": "",
    "zellij-remote-chain": "zellij-launcher a $npm_package_name-remote-chain-$MODE || zellij -n dev/zellij-remote-chain.kdl -s $npm_package_name-remote-chain-$MODE",
    "remote-chain": "ldenv -d localhost pnpm run zellij-remote-chain @@",
    "---------------------- RUN FULL LOCAL SETUP ----------------------": "",
    "zellij": "cross-var zellij-launcher a $npm_package_name || cross-var ldenv -d localhost zellij -n dev/zellij.kdl -s $npm_package_name",
    "stop": "cross-var zellij kill-session $npm_package_name",
    "start": "pnpm zellij"
  }
}
